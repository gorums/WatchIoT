<%= render 'shared/alert_message'%>
<div class="auth-form-header">
<h1>Login</h1>
</div>
<%= form_for @user, url: '/login' do |f|%>
    <div class="form-group auth-form">
       <div class="input">
          <%= label_tag 'Email' %><br />
          <%= f.text_field :username, class: "form-control" %>
         <span><i class="fa fa-envelope-o"></i></span>
        </div>
        <div class="input">
          <%= f.label 'Password' %><br />
          <%= f.password_field :passwd %>
          <span><i class="fa fa-lock"></i></span>
        </div>
        <div class="checkbox-inline">
            <label class="checkbox"><%= f.check_box :remember_me %>Remember me</label>
        </div>

				<div class="form-group">
					<%= f.submit "Log in", class: "btn btn-default btn-lg active" %>
				</div>

				<div class="form-group">
					<a href="/forgot">Forgot your password?</a>
				</div>

				<br /><br />
				<p>
					<%= link_to  'auth/github', class: "btn btn-primary btn-lg active" do%>
						<i class="fa fa-github-square fa-1x"></i> Log in with Github
					<%end %>
				</p>
				<%= render 'shared/alert_message'%>
    </div>
<% end %>







