<div class="with-gradient" id="contactus">
	<div class="started-session">
		<div class="row value-props" >
			<h1 class="col-lg-12">Contact us</h1>
			<form action="/home/contact" method="post">

				<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
				<div class="input">
					<%= label(:contact, :email) %>
					<%= email_field(:contact, :email, class: "form-control") %>
				</div>
				<div class="input">
					<%= label(:contact, :subject) %>
					<%= text_field(:contact, :subject, class: "form-control") %>
				</div>
				<div class="input">
					<%= label(:contact, :body) %>
					<%= text_area(:contact, :body, class: "form-control") %>
				</div>
				<p><%= submit_tag "Send", class: "btn btn-primary btn-lg active" %></p>
			</form>

			<% flash.each do |key, value| %>
				<div class="alert alert-<%= key %>"><%= value %></div>
			<% end %>

		</div><!-- /.row -->
	</div>
</div>