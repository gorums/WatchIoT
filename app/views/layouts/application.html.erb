<!DOCTYPE html>
<html>
<head>
  <title>WatchIoT</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<!-- include navigation here -->
<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container">
    <div class="logo" style="float:left;"><a href="" ><img height="50px" src="../images/Logo_DotNet.png" /></a></div>

    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/"><span class="title">WatchIoT</span></a>
    </div>

    <div id="navbar" class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li><a href="#start">Getting started</a></li>
        <li><a href="/prices">Price</a></li>
        <li><a href="/documentation/">Documentation</a></li>
        <li><a href="/support/">Support</a></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if current_user %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                <i class="fa fa-user fa-fw"></i>
                <%= current_user.email%> <span class="caret"></span>
              </a>
                <ul class="dropdown-menu ">
                  <li><%= link_to logout_path do%>
                        Logout
                    <%end%></li>
                  <li role="separator" class="divider"></li>
                </ul>
            </li>
        <% else %>
            <li ><%= link_to login_path do%>
                  Login
              <%end%>
            </li>
            <li ><%= link_to register_path do %>
                  Sing up
              <%end%>
            </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>

<%= yield %>

<footer>
  <div class="inner-footer">
    <p>Â© WatchIoT</p>
    <p>
      <a href="https://www.github.com/gorums/watchiot" target="_blank"><span class="fa fa-stack fa-lg">
        <span class="fa fa-square-o fa-stack-2x"></span>
        <span class="fa fa-github fa-stack-1x"></span>
      </span></a>
      <a href="https://twitter.com/watchiot" target="_blank">
        <span class="fa fa-stack fa-lg">
            <span class="fa fa-square-o fa-stack-2x"></span>
            <span class="fa fa-twitter fa-stack-1x"></span>
        </span>
      </a>
      <a href="https://www.facebook.com/watchiot" target="_blank"><span class="fa fa-stack fa-lg">
        <span class="fa fa-square-o fa-stack-2x"></span>
        <span class="fa fa-facebook fa-stack-1x"></span>
      </span></a>
    </p>
  </div>
</footer>
</body>
</html>
