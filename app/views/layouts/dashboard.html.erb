<!DOCTYPE html>
<html>
<head>
  <title>WatchIoT</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="wrapper">
  <!-- Sidebar -->
  <div id="sidebar-wrapper">
    <ul class="sidebar-nav">
      <li class="sidebar-brand">
        <a href="#">
          WatchIoT
        </a>
        <div class="ember-view navigator-toggle icon icon-navigator-toggle"></div>
      </li>
      <li>
        <a href="#">Dashboard</a>
      </li>
      <li>
        <a href="#">My spaces</a>
      </li>
      <li>
        <a href="#">My proyect</a>
      </li>
      <li>
        <a href="#">Setting</a>
      </li>
    </ul>
  </div>

  <div id="navbar" class="collapse navbar-collapse head-dashboard">
    <ul class="nav navbar-nav">
      <li>
        <div class="apps-search">
          <i class="fa fa-search fa-2x fa-apps-search"></i>
          <input type="text" class="form-control apps-search-input" placeholder="Search"/>
        </div>
      </li>
    </ul>

    <ul class="nav navbar-nav navbar-right">
      <li class="dropdown">
        <a href="#" class="dropdown-toggle dropdown-user-a" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
            <span class="dropdown-user"><span class="caret"></span><i class="fa fa-user fa-fw"></i>
              <%= current_user.email%>

            </span>
        </a>
        <ul class="dropdown-menu dropdown-menu-left">
          <li><%= link_to root_path do%>
                Home
            <%end%></li>
          <li><%= link_to root_path do%>
                Setting
            <%end%></li>
          <li role="separator" class="divider"></li>
          <li><%= link_to logout_path do%>
                Logout
            <%end%></li>
        </ul>
      </li>
    </ul>
  </div>
  <!-- /#sidebar-wrapper -->

  <!-- Page Content -->
  <%= yield %>

  <!-- /#page-content-wrapper -->

</div>
<!-- /#wrapper -->

<!-- Menu Toggle Script -->
<script>
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });

    $(window).resize(function()
    {
        //hack toggled
        $("#wrapper").toggleClass("toggled");
        $("#wrapper").toggleClass("toggled");
    });
</script>

</body>

</html>