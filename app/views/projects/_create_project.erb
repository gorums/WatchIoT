<% if @project.errors.any? %>
	<div id="error_explanation">
		<h2><%= pluralize(@project.errors.count, "error") %> prohibited this article from being saved:</h2>

		<ul>
			<% @project.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
<% end %>

<%= form_for @project, url: '/' + me.username + '/' + @space.name + '/create' do |f| %>
<div class="form-horizontal">

	<%= div_for(@project, class: 'form-group') do %>
		<label class="col-lg-2">Project Name</label>
		<div class="col-lg-10">
			<%= f.text_field :name, class: 'form-control' %>
		</div>
	<% end %>

	<%= div_for(@project, class: 'form-group') do %>
		<label class="col-lg-2">Description</label>
		<div class="col-lg-10">
			<%= f.text_area :description, class: 'form-control' %>
		</div>
	<% end %>

	<%= div_for(@project, class: 'form-group') do %>
		<div class="col-lg-offset-2 col-lg-6">
			<%= submit_tag 'Create Project', class: 'btn btn-primary' %>

		</div>

		<div class="col-lg-offset-2 col-lg-6">
			<input type="file" class="btn btn-default">Import Project</input>
		</div>

	<% end %>
</div>
<% end %>