<form class="form-horizontal">

	<div class="form-group">
		<label class="col-lg-2">Space Name</label>
		<div class="col-lg-6">
			<input type="text" class="form-control" id="exampleInputEmail1" placeholder="Space Name">
		</div>
	</div>

	<div class="form-group">
		<label class="col-lg-2">Description</label>
		<div class="col-lg-10">
			<textarea  class="form-control" rows="3"></textarea>
		</div>
	</div>

	<div class="form-group">
		<label class="col-lg-2">Public space</label>
		<div class="col-lg-10">
			<input type="checkbox">
		</div>
		<div class="col-lg-10">
			<small>If you check this like public all the people can subscribe in your notification by email.</small>
		</div>
	</div>

	<div class="form-group">
		<div class="col-lg-offset-2 col-lg-6">
			<button type="button" class="btn btn-primary">Create Space</button>
		</div>
	</div>
</form>